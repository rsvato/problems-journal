<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
    <formset>
        <form name="crashForm">
            <field property="failureTime" depends="required">
                <arg key="errors.time.missing"/>
             </field>
            <field property="failureDescription" depends="required">
                <arg key="errors.description.missing"/>
            </field>
        </form>
        <form name="complaintForm">
            <field property="failureTime" depends="required">
                <arg key="errors.time.missing"/>
            </field>
            <field property="failureDescription" depends="required">
                <arg key="errors.description.missing"/>
            </field>
            <field property="failureClient" depends="required,integer">
                <arg key="errors.clientId.missing"/>
            </field>
        </form>
        <form name="causeForm">
            <field property="discoveredCause" depends="required">
                <arg key="errors.cause.missing"/>
            </field>
            <field property="kind" depends="required">
                <arg key="errors.failureId.missing"/>
            </field>
            <field property="failureId" depends="required,integer">
                <arg key="errors.failureId.missing"/>
            </field>
        </form>
        <form name="restoreActionForm">
            <field property="actionDescription" depends="required">
                <arg key="errors.description.missing"/>
            </field>
            <field property="actionTime" depends="required">
                <arg key="errors.time.missing"/>
            </field>
            <field property="failureId" depends="required,integer">
                <arg key="errors.failureId.missing"/>
            </field>
            <field property="kind" depends="required">
                <arg key="errors.failureId.missing"/>
            </field>
        </form>
    </formset>
</form-validation>