<?xml version="1.0"?>
<project name="problems-domain" default="package" basedir=".">
    <property file="build.properties"/>
    <path id="compile.classpath">
        <fileset dir="${lib.dir}">
            <include name="*.jar"/>
        </fileset>
    </path>
    <target name="init">
        <mkdir dir="${build.topdir}"/>
        <mkdir dir="${compile.dir}"/>
        <mkdir dir="${dist.dir}"/>
    </target>
    <target name="clean">
        <delete dir="${build.topdir}"/>
    </target>
    <target name="compile" depends="clean,init">
        <javac srcdir="${src.dir}" destdir="${compile.dir}" classpathref="compile.classpath"/>
    </target>
    <target name="package" depends="compile">
        <jar destfile="${dist.dir}/${app.name}.jar">
            <fileset dir="${compile.dir}">
                <include name="**/*.class"/>
            </fileset>
            <fileset dir="${src.dir}">
                <include name="**/*.xml"/>
                <include name="**/*.properties"/>
            </fileset>
            <metainf dir="${meta.dir}"/>
        </jar>
    </target>
</project>